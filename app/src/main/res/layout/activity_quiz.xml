<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/tryb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
             <LinearLayout
                 android:weightSum="2"
                 android:layout_margin="5sp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/levellabel"
                   android:layout_weight="1"
                   android:textSize="20sp"
                   android:textAlignment="center"
                   android:padding="4sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
                 <TextView
                     android:id="@+id/levelnumber"
                     android:padding="4sp"
                     android:textSize="20sp"
                     android:gravity="center"
                     android:layout_weight="1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>
             <LinearLayout
                 android:layout_margin="10sp"
               android:weightSum="4"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
                 <TextView
                     android:textSize="20sp"
                     android:gravity="center"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:text="@string/Points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                 <TextView
                     android:textSize="20sp"
                     android:id="@+id/points"
                     android:gravity="center"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                 <TextView
                     android:textSize="20sp"
                     android:gravity="center"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:text="@string/Lives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                 <TextView
                     android:textSize="20sp"
                     android:id="@+id/lives"
                     android:gravity="center"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
             </LinearLayout>
             <TextView
                    android:id="@+id/qiestion"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:layout_margin="10sp"
                    android:background="@color/half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
             </TextView>
             <Button
                 android:id="@+id/option0"
                 android:textSize="20sp"
                 android:background="@color/half"
                 android:layout_marginTop="5sp"
                 android:layout_marginRight="10sp"
                 android:layout_marginLeft="10sp"
                 android:layout_marginStart="10sp"
                 android:layout_marginEnd="10sp"
                 android:layout_gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
             </Button>
           <Button
               android:id="@+id/option1"
               android:textSize="20sp"
               android:background="@color/half"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5sp"
               android:layout_marginRight="10sp"
               android:layout_marginLeft="10sp"
               android:layout_marginStart="10sp"
               android:layout_marginEnd="10sp">
           </Button>
           <Button
               android:id="@+id/option2"
               android:textSize="20sp"
               android:background="@color/half"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5sp"
               android:layout_marginRight="10sp"
               android:layout_marginLeft="10sp"
               android:layout_marginStart="10sp"
               android:layout_marginEnd="10sp">
           </Button>
           <Button
               android:id="@+id/option3"
               android:textSize="20sp"

               android:layout_gravity="center"
               android:background="@color/half"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5sp"
               android:layout_marginRight="10sp"
               android:layout_marginLeft="10sp"
               android:layout_marginStart="10sp"
               android:layout_marginEnd="10sp">
           </Button>
           <com.google.android.gms.ads.AdView
               xmlns:ads="http://schemas.android.com/apk/res-auto"
               ads:adSize="BANNER"
               android:id="@+id/adviewQuiz"
               android:layout_margin="10sp"
               ads:adUnitId="@string/banner"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <com.google.android.gms.ads.AdView
               xmlns:ads="http://schemas.android.com/apk/res-auto"
               ads:adSize="BANNER"
               android:id="@+id/adviewQuiz2"
               android:layout_margin="10sp"
               ads:adUnitId="@string/banner1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/correctQuestion"
               android:textAlignment="center"
               android:background="@color/offer"
               android:layout_margin="5sp"
               android:textSize="20sp"
               android:text="This Question has grammatical mistakes. Let me correct it"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>
   </ScrollView>

</LinearLayout>
